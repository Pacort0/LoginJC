<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuPrincipalActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/botonSaludo"
        android:layout_width="125dp"
        android:layout_height="125dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="130dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Saludos"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/IMCBoton"
        android:layout_width="125dp"
        android:layout_height="125dp"
        app:layout_constraintTop_toBottomOf="@id/botonSaludo"
        app:layout_constraintEnd_toStartOf="@id/botonSaludo"
        android:layout_marginTop="30dp"
        android:text="IMC App"
        android:textColor="@color/teal_700"
        android:textStyle="bold"
        android:textSize="20sp"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="125dp"
        android:layout_height="125dp"
        app:layout_constraintTop_toBottomOf="@id/botonSaludo"
        app:layout_constraintStart_toEndOf="@id/botonSaludo"
        android:layout_marginTop="30dp"
        android:text="App en camino"
        android:textColor="@color/purple_700"
        android:textStyle="bold"
        android:textSize="20sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/IMCBoton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text=":)"
        android:textSize="50dp"
        android:layout_marginTop="30dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>